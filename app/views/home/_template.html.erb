    $(function () {
        $("#slider_rotate").slider({
            value: 0,
            min: 0,
            max: 720,
            step: 5,
            slide: function (event, ui) {
                rotate_pos = $("#slider_rotate").slider("value");
                scale_pos = $("#slider_scale").slider("value");
                index = $('#selected').val();
                $('#image' + index).val(rotate_pos);
//                $('#Svg_circle1').attr('transform', "rotate(" + rotate_pos + " 50 50) scale(" + scale_pos + ")");
                if (index == 1) {
                    $('#img_' + index).attr('transform', "rotate(" + rotate_pos + " 732 85) scale(" + scale_pos + ")");
                }
                else if (index == 2) {
                    $('#img_' + index).attr('transform', "rotate(" + rotate_pos + " 400 200) scale(" + scale_pos + ")");
                }
                else if (index == 3) {
                    $('#img_' + index).attr('transform', "rotate(" + rotate_pos + " 60 100) scale(" + scale_pos + ")");
                }
            },
            stop: function (event, ui) {
                rotate_slide();
            }
        });

        function rotate_slide() {
            index = $('#selected').val();
            transform = $('#img_' + index).attr('transform');
            scale = transform.split('scale(')[1].replace(')', '');
            rotate = transform.split(' ')[0].replace('rotate', '').replace('(', '').replace(')', '').split(' ')[0];
            $('#image' + index).val(rotate);
            $('#scale' + index).val(scale);
        }

        $("#slider_scale").slider({
            value: .9,
            min: .1,
            max: .9,
            step: .01,
            slide: function (event, ui) {
                rotate_pos = $("#slider_rotate").slider("value");
                scale_pos = $("#slider_scale").slider("value");
                index = $('#selected').val();
                $('#scale' + index).val(scale_pos);
                if (index == 1) {
                    $('#img_' + index).attr('transform', "rotate(" + rotate_pos + " 732 85) scale(" + scale_pos + ")");
                }
                else if (index == 2) {
                    $('#img_' + index).attr('transform', "rotate(" + rotate_pos + " 400 200) scale(" + scale_pos + ")");
                }
                else if (index == 3) {
                    $('#img_' + index).attr('transform', "rotate(" + rotate_pos + " 60 100) scale(" + scale_pos + ")");
                }
            },
            stop: function (event, ui) {
                rotate_slide();
            }
        });

    });
</script>


